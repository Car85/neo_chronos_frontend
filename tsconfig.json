{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES5",
			"ES6",
			"ES7"
		  ],
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		},
		"allowImportingTsExtensions": true
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
